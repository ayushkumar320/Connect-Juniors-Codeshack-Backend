# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/codeshack

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRY=7d

# CORS Configuration
# Use * for all origins in development, or specify allowed origins in production
# Example: CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_ORIGIN=*

# Secret Keys for Protected Registration
# These keys are required to create mentor and admin accounts
MENTOR_SECRET_KEY=your_mentor_secret_key_here
ADMIN_SECRET_KEY=your_admin_secret_key_here
